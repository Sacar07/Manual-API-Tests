  "item": [
    {
      "name": "Submit Order",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "id": "ebe2c597-f932-4ea2-a5a2-f85ed900d018",
            "exec": [
              "console.log(\"Final URL:\", pm.request.url.toString());\r",
              "console.log(\"Auth header:\", pm.request.headers.get(\"Authorization\"));\r",
              "\r",
              "pm.environment.set(\"baseurl_order\", \"https://simple-books-api.click\");\r",
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "test",
          "script": {
            "id": "c9236df4-a93b-41b3-adfd-668525dcb653",
            "exec": [
              "pm.test(\"Authorization header was sent\", () => {\r",
              "    pm.expect(pm.request.headers.get(\"Authorization\")).to.include(\"Bearer\");\r",
              "});\r",
              "\r",
              "console.log(\"Auth header:\", pm.request.headers.get(\"Authorization\"));\r",
              "//status code validation\r",
              "pm.test(\"status code is 201\", () => {\r",
              "    pm.response.to.have.status(201);\r",
              "})\r",
              "\r",
              "const jsonData = pm.response.json();\r",
              "const order_id = jsonData.orderId ;\r",
              "pm.environment.set(\"order_id\",order_id )\r",
              "\r",
              "\r",
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "id": "b37b5c9d-3f34-4b0c-b41f-ffe767e39a36",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\r\n    \"bookId\" : \"{{BookID}}\",\r\n    \"customerName\": \"{{CustomerName}}\"\r\n} ",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseurl_order}}/orders",
          "host": [
            "{{baseurl_order}}"
          ],
          "path": [
            "orders"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Single Order",
      "event": [
        {
          "listen": "test",
          "script": {
            "id": "de4c122a-b3ae-4f8a-82cc-ac23abb798f5",
            "exec": [
              "pm.test(\"Status code is 200\", () => {\r",
              "    pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "pm.test(\"Check orderID present in the response body\", () =>{\r",
              "    const jsonData = pm.response.json();\r",
              "    pm.expect(pm.environment.get(\"order_id\")).to.eql(jsonData.id);\r",
              "})"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
